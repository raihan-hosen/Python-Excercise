n=int(input("Enter the row number: "))
a=input('Enter 0 or 1: ')
b=bool(int(a))

if b==True:
    for i in range (1,n+1):
        for j in range (i):
            print("*", end=' ')
        print("")
            

elif b==False:
    for i in range (-n,0):
        for j in range (i,0):
            print("*", end='')
        print("")
